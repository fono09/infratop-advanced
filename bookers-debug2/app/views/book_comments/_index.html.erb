<% book.book_comments.each do |comment| %>
  <tr>
    <td>
      <%= link_to user_path(comment.user) do %>
        <%= image_tag comment.user.get_profile_image, size:"100x100" %><br>
        <%= comment.user.name %>
      <% end %>
    </td>
    <td><%= comment.body %></td>
    <td><%= link_to 'Destroy', book_comment_path(comment), method: :delete, class: 'btn btn-danger', remote: true %></td>
<% end %>
